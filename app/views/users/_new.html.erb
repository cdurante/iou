<% provide(:title, 'Sign up') %>
<div class="jumbotron">
<h1>Sign up</h1>

<div class="container">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

  <%= render '/users/fields', f: f %>
        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %></br>
    <div id = "signin_section">
    <p> Already have an account? </p>
    <%= link_to "Sign In", signin_url, class: "btn btn-large btn-primary", id: "signin_button" %>
    </div>
    <% end %>

  </div>
</div>
</div>
