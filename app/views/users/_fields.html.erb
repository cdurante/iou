<%= render 'shared/error_messages' %>
<div class = "form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control", placeholder: "Your Name" %><br>

	<%= f.label :email %>
	<%= f.text_field :email , class: "form-control", placeholder: "Your Email" %><br>

	<%= f.label :password %>
	<%= f.password_field :password , type: "password", class: "form-control", placeholder: "Password", name: "user[password]" %><br>

	<%= f.label :password_confirmation, "Confirm Password" %>
	<%= f.password_field :password_confirmation , type: "password", class: "form-control", placeholder: "Confirm Password", name: "user[password_confirmation]"  %><br>
</div>
