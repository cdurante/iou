<div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">
            <h4>Create new Transaction</h4>
          </div>
        </div>
        
        <div class="panel-body">
         
            <div class="control-group">
		              <%= form_for(@transaction, class: "form form-vertical" ) do |f| %>
		              <%= render 'shared/error_messages', object: f.object %>
		          <div class="field">
		            <label>Transaction Name</label>
		            <div class="controls">
		              <%= f.text_field :name, placeholder: "Transaction Name" ,class: "form-control" %>
	             </div>
		          </div>

<div class="field">
        <label>Description</label>
        <div class="controls">
          <%= f.text_area :description, placeholder: "Transaction Description" ,class: "form-control" %>
              </div>
      </div>

	         <div class="control-group">
                   <label>Ower</label>
                   <div class="controls">
	         	<%= f.select :debtor_id, options_for_debtors(current_user), :prompt => 'Select One',:selected => params[:pid]  %>
                   </div>
                 </div>

	         <div class="control-group">
                   <label>Amount</label>
                   <div class="controls">
		     <%= f.number_field :amount, :step => 'any', placeholder: "Amount", class: "form-control" %>
                   </div>
                 </div> 

	      <%= f.submit "Create", class: "btn btn-large btn-primary", style: "margin-left: 0px;" %>
	   <% end %>
	  </div>
</div><!--/panel content-->
</div><!--/panel-->
